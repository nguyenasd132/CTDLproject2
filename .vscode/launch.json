{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "C/C++: build active file",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "problemMatcher": "$gcc",
      "group": "build"
    }
  ]
}